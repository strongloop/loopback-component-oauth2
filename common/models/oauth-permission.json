{
  "name": "OAuthPermission",
  "base": "PersistedModel",
  "properties": {
    "appId": {
      "type": "string",
      "length": 128,
      "index": true
    },
    "userId": {
      "type": "string",
      "index": true
    },
    "issuedAt": {
      "type": "date",
      "index": true
    },
    "expiresIn": "number",
    "expiredAt": {
      "type": "date",
      "index": true
    },
    "scopes": [ "string" ]
  },
  "relations": {
    "application": {
      "type": "belongsTo",
      "model": "OAuthClientApplication",
      "foreignKey": "appId"
    },
    "user": {
      "type": "belongsTo",
      "model": "OAuthUser",
      "foreignKey": "userId"
    }
  }
}

